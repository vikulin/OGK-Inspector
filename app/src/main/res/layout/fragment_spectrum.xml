<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flexbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LineChart -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/spectrumChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="-20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tableContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spectrumChart" />

    <!-- ImageButtons centered vertically with equal spacing -->
    <ImageButton
        android:id="@+id/btnCalibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/btnFwhm"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/colorPrimaryText"
        flexbox:srcCompat="@drawable/ic_calibration" />

    <ImageButton
        android:id="@+id/btnFwhm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/btnCalibration"
        app:layout_constraintStart_toStartOf="@+id/btnCalibration"
        app:tint="@color/colorPrimaryText"
        flexbox:srcCompat="@drawable/ic_fwhm" />

    <ImageButton
        android:id="@+id/btnScreenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/btnFwhm"
        app:layout_constraintStart_toStartOf="@+id/btnFwhm"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:tint="@color/colorPrimaryText"
        flexbox:srcCompat="@drawable/ic_screenshot" />

    <ImageButton
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/btnScreenshot"
        app:layout_constraintStart_toStartOf="@+id/btnScreenshot"
        app:layout_constraintTop_toBottomOf="@+id/btnScreenshot"
        app:tint="@color/colorPrimaryText"
        flexbox:srcCompat="@drawable/ic_share" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tableContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="24dp"
        android:padding="8dp"
        flexbox:justifyContent="flex_start"
        flexbox:flexWrap="wrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Device -->
        <TextView
            android:id="@+id/deviceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="Device Unknown"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:layout_marginEnd="16dp" />

        <!-- Counts & Pulse Count in the same pair -->
        <TextView
            android:text="Counts"
            android:textSize="11sp"
            android:textColor="@color/colorPrimaryText"
            android:fontFamily="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" />
        <TextView
            android:id="@+id/pulseCountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="0"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:layout_marginEnd="16dp" />

        <!-- Measure Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="Measure Time"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:layout_marginEnd="10dp"/>

        <Chronometer
            android:id="@+id/measureTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:textSize="11sp"
            android:fontFamily="monospace"/>

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
